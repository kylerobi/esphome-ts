{
    "name": "esphome-ts",
    "version": "2.1.3",
    "description": "A TypeScript client for the Esphome Native API interface",
    "main": "dist/index.js",
    "type": "dist/index.d.ts",
    "repository": "https://github.com/lucavb/esphome-ts",
    "files": [
        "dist/*"
    ],
    "scripts": {
        "build": "npx tsc",
        "test": "npx jest",
        "clean": "rm -rf dist",
        "cbuild": "npm run clean && npm run build",
        "format": "npx eslint --fix src/**/*.ts test/**/*.ts",
        "prepare": "npm run format && npm run cbuild"
    },
    "keywords": [
        "esphome",
        "typescript"
    ],
    "author": "Luca Becker <luca.becker@sunbury.xyz> (https://sunbury.xyz/)",
    "license": "GPL-3.0",
    "dependencies": {
        "color-convert": "^2.0.1",
        "rxjs": "^6.5.5"
    },
    "devDependencies": {
        "@types/color-convert": "^1.9.0",
        "@types/jest": "^25.2.1",
        "@types/node": "^13.13.4",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "@typescript-eslint/parser": "^2.30.0",
        "eslint": "^6.8.0",
        "eslint-config-google": "^0.14.0",
        "jest": "^25.5.3",
        "ts-jest": "^25.4.0",
        "ts-proto": "^1.18.3",
        "typescript": "^3.8.3"
    }
}
