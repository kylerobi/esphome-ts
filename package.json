{
    "name": "esphome-ts",
    "version": "3.0.1",
    "description": "A TypeScript client for the Esphome Native API interface",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": "https://github.com/lucavb/esphome-ts",
    "files": [
        "dist/*"
    ],
    "scripts": {
        "start": "ts-node-dev --project tsconfig.json -r tsconfig-paths/register src/run.ts",
        "build": "npx tsc",
        "test": "npx jest --config jest.config.json",
        "clean": "rm -rf dist",
        "cbuild": "npm run clean && npm run build",
        "format": "npx eslint --fix src/**/*.ts test/**/*.ts",
        "prepack": "npm run format && npm run cbuild"
    },
    "keywords": [
        "esphome",
        "typescript"
    ],
    "author": "Luca Becker <luca.becker@sunbury.xyz> (https://sunbury.xyz/)",
    "license": "GPL-3.0",
    "dependencies": {
        "color-convert": "2.0.1",
        "protobufjs": "6.10.2",
        "rxjs": "6.6.3"
    },
    "devDependencies": {
        "@types/color-convert": "2.0.0",
        "@types/jest": "26.0.19",
        "@types/node": "14.14.17",
        "@types/stylelint": "9.10.1",
        "@typescript-eslint/eslint-plugin": "4.11.0",
        "@typescript-eslint/parser": "4.11.0",
        "eslint": "7.17.0",
        "eslint-config-google": "0.14.0",
        "eslint-config-prettier": "7.1.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-prettier": "3.3.0",
        "eslint-plugin-unused-imports": "1.0.1",
        "jest": "26.6.3",
        "jest-junit": "12.0.0",
        "prettier": "2.2.1",
        "prettier-eslint": "12.0.0",
        "ts-jest": "26.4.4",
        "ts-node-dev": "1.1.1",
        "ts-proto": "1.41.1",
        "tsconfig-paths": "3.9.0",
        "typescript": "4.1.3"
    }
}
