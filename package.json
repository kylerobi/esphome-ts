{
    "name": "esphome-ts",
    "version": "2.1.5",
    "description": "A TypeScript client for the Esphome Native API interface",
    "main": "dist/index.js",
    "type": "dist/index.d.ts",
    "repository": "https://github.com/lucavb/esphome-ts",
    "files": [
        "dist/*"
    ],
    "scripts": {
        "build": "npx tsc",
        "test": "npx jest --config jest.config.json",
        "clean": "rm -rf dist",
        "cbuild": "npm run clean && npm run build",
        "format": "npx eslint --fix src/**/*.ts test/**/*.ts",
        "prepack": "npm run format && npm run cbuild"
    },
    "keywords": [
        "esphome",
        "typescript"
    ],
    "author": "Luca Becker <luca.becker@sunbury.xyz> (https://sunbury.xyz/)",
    "license": "GPL-3.0",
    "dependencies": {
        "color-convert": "2.0.1",
        "rxjs": "6.6.3"
    },
    "devDependencies": {
        "@types/color-convert": "2.0.0",
        "@types/jest": "26.0.19",
        "@types/node": "13.13.12",
        "@typescript-eslint/eslint-plugin": "2.34.0",
        "@typescript-eslint/parser": "2.34.0",
        "eslint": "6.8.0",
        "eslint-config-google": "0.14.0",
        "jest": "25.5.4",
        "jest-junit": "12.0.0",
        "prettier": "2.2.1",
        "ts-jest": "25.5.1",
        "ts-proto": "1.41.1",
        "typescript": "3.9.7"
    }
}
